@using OnClocService.Core.Entities.UserRegistry

<nav class="navbar default-layout col-lg-12 col-12 p-0 fixed-top d-flex align-items-top flex-row">
    <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-start">
        <div class="me-3">
            <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-bs-toggle="minimize">
                <span class="icon-menu"></span>
            </button>
        </div>
        <div>
            <a class="navbar-brand brand-logo" asp-area="" asp-page="Index">
                <img src="@await _ApplicationOptions.GetLogoUrl()" alt="logo" />
            </a>
            <a class="navbar-brand brand-logo-mini" asp-area="" asp-page="Index">
                <img src="@await _ApplicationOptions.GetIconUrl()" alt="logo" />
            </a>
        </div>
    </div>
    <div class="navbar-menu-wrapper d-flex align-items-top">
        <ul class="navbar-nav">
            <li class="nav-item">
                <img class="navbar-brand brand-logo img-fluid" src="@await _BusinessOptions.GetLogoUrl()" width="48" height="48" alt="servpal logo">
            </li>
            <li class="nav-item fw-semibold d-none d-lg-block ms-0">
                <h1 class="welcome-text">@await _BusinessOptions.GetShortName(), <span class="text-black fw-bold">@await _BusinessOptions.GetFullName()</span></h1>
                <h3 class="welcome-sub-text">@await _ApplicationOptions.GetSlogan()</h3>
            </li>
        </ul>
        <ul class="navbar-nav ms-auto">
            <li class="nav-item">
                <form class="search-form" action="#">
                    <i class="icon-search"></i>
                    <input type="search" class="form-control" placeholder="Search Here" title="Search here">
                </form>
            </li>
            <partial name="_LoginPartial" />
        </ul>
        <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button"
                data-bs-toggle="offcanvas">
            <span class="mdi mdi-menu"></span>
        </button>
    </div>
</nav>
